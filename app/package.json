{
  "name": "app",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "ISC",
  "main": "server/index.ts",
  "scripts": {
    "task:lint": "eslint . --ext .ts,.tsx,.js,.jsx --ignore-pattern bin",
    "task:build": "webpack --config build/webpack",
    "task:test:integration": "mocha --require ts-node/register --require source-map-support/register server/**/*.spec.ts",
    "task:test:coverage": "nyc npm run task:test:integration",
    "dev:build": "npm run task:build -- --env dev",
    "dev:build:watch": "npm run dev:build -- --watch",
    "dev:start": "nodemon --watch bin bin/server.js",
    "prod:build": "npm run task:build -- --env prod",
    "prod:start": "node bin/server.js"
  },
  "dependencies": {
    "axios": "0.21.1",
    "express": "4.17.1",
    "react": "17.0.1",
    "react-dom": "17.0.1"
  },
  "devDependencies": {
    "@babel/core": "7.13.10",
    "@babel/preset-env": "7.13.10",
    "@babel/preset-react": "7.12.13",
    "@types/express": "4.17.11",
    "@types/mocha": "8.2.2",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.2",
    "@typescript-eslint/eslint-plugin": "4.18.0",
    "@typescript-eslint/parser": "4.18.0",
    "babel-loader": "8.2.2",
    "chai": "4.3.4",
    "chai-http": "4.3.0",
    "cypress": "6.2.0",
    "eslint": "7.22.0",
    "eslint-plugin-cypress": "2.11.2",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-tsdoc": "0.2.11",
    "mocha": "8.3.2",
    "nodemon": "2.0.7",
    "nyc": "15.1.0",
    "source-map-support": "0.5.19",
    "ts-loader": "8.0.18",
    "ts-node": "9.1.1",
    "typescript": "4.2.3",
    "webpack": "4.46.0",
    "webpack-cli": "4.5.0",
    "webpack-livereload-plugin": "3.0.1",
    "webpack-merge": "5.7.3",
    "webpack-node-externals": "2.5.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "mocha": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "@typescript-eslint/eslint-plugin",
      "eslint-plugin-tsdoc"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:cypress/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "single",
        {
          "allowTemplateLiterals": true
        }
      ],
      "require-jsdoc": ["error", {
        "require": {
          "FunctionDeclaration": true,
          "MethodDefinition": true,
          "ClassDeclaration": true
        }
      }],
      "@typescript-eslint/no-var-requires": "off",
      "tsdoc/syntax": "warn"
    }
  },
  "nyc": {
    "require": "ts-node/register",
    "all": true,
    "cache": false,
    "branches": 80,
    "lines": 80,
    "functions": 80,
    "statements": 80,
    "check-coverage": true,
    "exclude": [
      "bin/**/*",
      "build/**/*",
      "test/**/*"
    ],
    "reporter": [
      "text"
    ]
  }
}
